<h1> Posts </h1>

<table class="table table-striped">
	<thead>
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Created at</th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
			<tr>
				<td><%= post.id %></td>
				<td><%=link_to post.title, post.url%></td>
				<td><%= post.created_at %></td>
			</tr>
		<% end %>
	<tbody>
</table>

<%= link_to 'New', new_post_path, :class => 'btn btn-primary'%>